@model IEnumerable<SimpleBlog.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center pb-5">Posts</h1>

<div class="d-flex">
    <h4 class="text-center w-50">Title:</h4>
    <h4 class="text-center w-50">Creator:</h4>
</div>
<div class="d-flex flex-column">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.ID" class="text-decoration-none text-white p-2 btn btn-dark border-light border">
            <div class="d-flex">
                <h5 class="px-3 w-50">@item.Title</h5>
                <h5 class="px-3 w-50">@item.Creator.Email</h5>
            </div>
        </a>


    }
</div>
<div class=" d-flex align-items-center justify-content-center w-100 py-5">
    <a class="btn btn-success" asp-action="Create">Create New Post</a>
</div>
