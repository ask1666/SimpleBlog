@model IEnumerable<SimpleBlog.Models.Post>

@{
    ViewData["Title"] = "MyIndex";
}
    <head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    </head>
<h1 class="text-center pb-5">My Posts</h1>

<div class="d-flex  w-100">
    <div class="w-100 d-flex border-bottom">
        <h4 class="text-center w-25">Title:</h4>
        <h4 class="text-center w-25">Creator:</h4>
        <h4 class="text-center w-25">Comments:</h4>
    </div>
    <div class=" border border-light" >
        <a class="p-3 px-4 float-right text-danger invisible">
        </a>
    </div>
</div>
<div class="d-flex flex-column w-100">
    @foreach (var item in Model)
    {
    <div class="w-100 d-flex align-items-center">
        <a asp-controller="posts" asp-action="Details" asp-route-id="@item.ID" class="d-flex text-decoration-none w-100 text-white p-2 py-3 border-light border btn btn-dark ">
            <h5 class="px-3 w-25 text-center" maxlength="10">@item.Title</h5>
            <h5 class="px-3 w-25 text-center" maxlength="10">@item.Creator.Email</h5>
            <h5 class="px-3 w-25 text-center">@item.Comments.Count</h5>
        </a>
        <div class="border-light border bg-dark rounded">
            <a type="submit" class="p-3 float-right text-danger" asp-controller="Posts" asp-action="Delete" asp-route-id="@item.ID">
                <i class="far fa-trash-alt fa-2x text-center"></i>
            </a>
        </div>
    </div>


    }
</div>
<div class=" d-flex align-items-center justify-content-center w-100 py-5">
    <a class="btn btn-primary" asp-action="Create">Create New Post</a>
</div>
